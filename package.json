{
  "name": "chat-web-desktop",
  "version": "1.0.1",
  "description": "Desktop shell for any web messenger (configurable URLs, multi-profile)",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win msi"
  },
  "keywords": [
    "chat",
    "electron",
    "desktop",
    "web-wrapper"
  ],
  "author": "Chat Web Desktop",
  "license": "ISC",
  "type": "commonjs",
  "build": {
    "appId": "com.chat.web.desktop",
    "productName": "Chat Web Desktop",
    "icon": "assets/chat_idle.ico",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "!dist{,/**}",
      "!node_modules/.cache{,/**}"
    ],
    "asar": true,
    "asarUnpack": [
      "assets/**"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": [
        "msi"
      ],
      "icon": "assets/chat_idle.ico"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  }
}
